<div class="row">
  <div class="col-sm-12 col-md-12 main">
	<p>
	  <strong>Agencies:</strong>
	  <%= @outlet.agencies.map(&:name).join(', ') %>
	</p>
	<p>
	  <strong>Organization:</strong>
	  <%= @outlet.organization %>
	</p>

	<p>
	  <strong>Service:</strong>
	  <%= @outlet.service %>
	</p>

	<p>
	  <strong>Service URL:</strong>
	  <%= @outlet.service_url %>
	</p>

	<p>
	  <strong>Tags:</strong>
	  <%= @outlet.tags.map(&:to_s).join(', ') %>
	</p>

	<p>
	  <strong>Updated at:</strong>
	  <%= @outlet.updated_at.strftime("%B %e, %Y %H:%M") %>
	</p>

	<%= link_to 'Edit', edit_admin_outlet_path(@outlet) %> |
	<%= link_to 'Back', admin_outlets_path %>
	</div>
	<div class="col-sm-4">
    <h3><i class="fa fa-user"></i> Contacts</h3>
		<div class="panel panel-default">
	  	<div class="panel-body">
	  		<ul class="list-unstyled">
	  			<% @outlet.all_contacts.each do |contact| %>
	  					<li><%= "#{contact.first_name} #{contact.last_name} - #{contact.email}" %></li>
	  			<% end %>
	  		</ul>
	  	</div>
		</div>
	</div>
	<div class="col-sm-8">
    <h3><i class="fa fa-clock-o fa-fw"></i> Recent Timeline</h3>
		<div class="panel panel-default">
	  	<div class="panel-body">
	  		<ul class="timeline">
	  			<%= render partial: "admin/shared/activities_feed", locals: {activities: @outlet.activities} %>
	  		</ul>
	  	</div>
		</div>
	</div>
</div>