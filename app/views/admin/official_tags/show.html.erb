<div class="col-sm-12 col-md-12 main">
  <h3><i class="fa fa-clock-o fa-fw"></i> Tags Info</h3>
  <div class = "panel panel-default">
    <div class = "panel-body">
      <p>
        <strong>Tag:</strong>
        <%= @official_tag.tag_text %>
      </p>
      <p>
        <strong>Type:</strong>
        <%= @official_tag.tag_type %>
      </p>
      <dl class="dl-horizontal">
        <dt>Social media (published)</dt>
        <dd><%= @official_tag.draft_outlet_count%> (<%= @official_tag.published_outlet_count%>)</dd>
        <dt>Mobile App Count (published)</dt>
        <dd><%= @official_tag.draft_mobile_app_count%> (<%= @official_tag.published_mobile_app_count%>)</dd>
        <dt>Gallery Count (published)</dt>
        <dd><%= @official_tag.draft_gallery_count%> (<%= @official_tag.published_gallery_count%>)</dd>
      </dl>

      <div class = "buttonRow">
        <%= link_to 'Back to Tags', admin_official_tags_path, {:class => "fa fa-angel-double-left"} %>
        <%= link_to 'Edit', edit_admin_official_tag_path(@official_tag), {:class => "fa fa-pencil"} %> 
      </div>
    </div>
  </div>   



</div>