<div class="col-sm-12 col-md-12 main">
  <h3><i class="fa fa-clock-o fa-fw"></i> Tags Info</h3>
  <div class = "panel panel-default">
    <div class = "panel-body">
      <p>
        <strong>Tag:</strong>
        <%= @tag.tag_text %>
      </p>

      <dl class="dl-horizontal">
        <dt>Social media</dt>
        <dd><%= @tag.outlet_count%></dd>
        <dt>Mobile App Count</dt>
        <dd><%= @tag.mobile_app_count%></dd>
        <dt>Gallery Count</dt>
        <dd><%= @tag.gallery_count%></dd>
      </dl>

      <div class = "buttonRow">
        <%= link_to 'Back to Tags', admin_official_tags_path, {:class => "fa fa-angel-double-left"} %>
        <%= link_to 'Edit', edit_admin_official_tag_path(@tag), {:class => "fa fa-pencil"} %> 
      </div>
    </div>
  </div>   



</div>