<%= form_for([:admin,@user]) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this social media account from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="bg-info">
  <p>Notice: Please ensure all information is up to date in case we need to contact to you in relation to an account</div>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, :class => 'form-control formwidth'%>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, :class => 'form-control formwidth'%>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :class => 'form-control formwidth', :disabled => true%>
  </div>
  <div class = "field">
    <%= f.label :agency_id %>
    <%= f.select :agency_id, options_from_collection_for_select(Agency.all,:id,:name,@user.try(:agency).try(:id)), {include_blank: "Select"}, {:class => 'form-control formwidth'} %> 
  </div>
  <!-- <div class = "field">
    <%= f.label :groups %>
    <%= f.text_field :groups, :class => "form-control formwidth" %>
  </div> -->
  <div class = "field">
    <%= f.label :role %>
    <%= f.text_field :role, :class => "form-control formwidth", :value => @user.role %>
  </div>
  <div class = "field">
    <%= f.label :phone %>
    <%= f.text_field :phone, :class => "form-control formwidth"%>
  </div>

  <div class = "field">
    <%= f.submit "Save Changes", :class => "btn btn-primary" %>
  </div>
<% end %>
