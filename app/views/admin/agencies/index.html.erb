<div class="row">
  <div class="col-sm-12 col-md-12 main">
    <h1 class="page-header">Agencies</h1>
    <p>
      <%=paginate @agencies%>
  	  <text>
        Download: <%= link_to "CSV", admin_agencies_path(format: "csv") %> 
      </text>
    </p>
    <table id="agency" class="table table-striped" >
  		<thead>
        <tr class = "agency_row">
          <th><%= sortable "name", "Agency Name" %></th>
          <th><%= sortable "shortname", "Short Name" %></th>
          <th><%= sortable "info_url", "Info URL" %></th>
          <th><%= sortable "draft_outlets_count", "# of Social Accounts (published)" %></th>
          <th><%= sortable "draft_mobile_apps_count", "# of Apps (published)" %></th>
          <th><%= sortable "draft_galleries_count", "# of Galleries (published)" %></th>
          <th class = "lastlinks">Actions</th>
    		</tr>
      </thead>

      <tbody>
    		<% @agencies.each do |agency| %>
    			<tr class = "tablerow">
    				<td class = "tabledata midWidth"><%= agency.name %></td>
            <td class = "tabledata"><%= agency.shortname %></td>
            <td class = "table_data"><%= agency.info_url %></td>
            <td class="center"><%= agency.draft_outlet_count %> (<%= agency.published_outlet_count %>)</td>
            <td class="center"><%= agency.draft_mobile_app_count %> (<%= agency.published_mobile_app_count %>)</td>
            <td class="center"><%= agency.draft_gallery_count %> (<%= agency.published_gallery_count %>)</td>
            <td class = "table_data lastlinks">
              <%= link_to admin_agency_path(agency) do %> <i class = "glyphicon glyphicon-info-sign"></i> <% end %>
              <%= link_to edit_admin_agency_path(agency) do %> <i class = "glyphicon glyphicon-pencil"></i> <% end %>
              <!-- <%#= link_to history_admin_agency_path(agency) do %><i class = "glyphicon glyphicon-book"></i> <#% end %>  -->
              <%= link_to admin_agency_path(agency), method: :delete, "data-confirm" => 'Are you certain you want to delete this?' do %> <i class = "glyphicon glyphicon-remove"></i> <% end %>
            </td>   
    			</tr>
    		<% end %>
      </tbody>
  	</table>
    <p>
      <text>
        Download: <%= link_to "CSV", admin_agencies_path(format: "csv") %> 
      </text>
      <%= paginate @agencies %>
    </p>
  </div>
</div>

