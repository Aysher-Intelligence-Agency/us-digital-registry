{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "https://api.data.gov/gsa/digital-registry/",
  "resourcePath": "tags",
  "apis": [
    {
      "path": "/v1/tags/types.json",
      "operations": [
        {
          "summary": "Fetches all types for the tags, to help power other queries.",
          "notes": "This returns a tag based on an ID.",
          "nickname": "Api::V1::Tags#types",
          "method": "get"
        }
      ]
    },
    {
      "path": "/v1/tags.json",
      "operations": [
        {
          "summary": "Fetches all official tags, with queryable fields such as a basic text search and.",
          "notes": "This lists all tags.  It accepts parameters to perform basic search.",
          "parameters": [
            {
              "paramType": "query",
              "name": "q",
              "type": "string",
              "description": "String to compare to the short name of tags.",
              "required": false
            },
            {
              "paramType": "type",
              "name": "type",
              "type": "string",
              "description": "Comma separated list of tag types",
              "required": false
            },
            {
              "paramType": "query",
              "name": "page_size",
              "type": "integer",
              "description": "Number of results per page",
              "required": false
            },
            {
              "paramType": "query",
              "name": "page",
              "type": "integer",
              "description": "Page number",
              "required": false
            }
          ],
          "nickname": "Api::V1::Tags#index",
          "method": "get"
        }
      ]
    },
    {
      "path": "/v1/tags/{id}.json",
      "operations": [
        {
          "summary": "Fetches tag based on ID",
          "notes": "This returns a tag based on an ID.",
          "parameters": [
            {
              "paramType": "path",
              "name": "id",
              "type": "integer",
              "description": "ID of the tag.",
              "required": false
            }
          ],
          "nickname": "Api::V1::Tags#show",
          "method": "get"
        }
      ]
    }
  ],
  "authorizations": null
}