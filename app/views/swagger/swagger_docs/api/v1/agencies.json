{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "https://api.data.gov/gsa/digital-registry/",
  "resourcePath": "agencies",
  "apis": [
    {
      "path": "/v1/agencies.json",
      "operations": [
        {
          "summary": "Fetches all agencies",
          "notes": "This lists all active agencies in the system. These agencies can be used to query for social media accounts, mobile products, and galleries.",
          "parameters": [
            {
              "paramType": "query",
              "name": "q",
              "type": "string",
              "description": "String to compare to the name & acronym of the agencies.",
              "required": false
            },
            {
              "paramType": "query",
              "name": "page_size",
              "type": "integer",
              "description": "Number of results per page",
              "required": false
            },
            {
              "paramType": "query",
              "name": "no_accounts",
              "type": "string",
              "description": "Including this parameter with value 'true' will cause the endpoint to include agencies that have no account in the system",
              "required": false
            },
            {
              "paramType": "query",
              "name": "page",
              "type": "integer",
              "description": "Page number",
              "required": false
            }
          ],
          "nickname": "Api::V1::Agencies#index",
          "method": "get"
        }
      ]
    },
    {
      "path": "/v1/agencies/{id}.json",
      "operations": [
        {
          "summary": "Fetches a single agency and its metadata.",
          "notes": "This returns an agency based on an ID.",
          "parameters": [
            {
              "paramType": "path",
              "name": "id",
              "type": "integer",
              "description": "ID of the agency",
              "required": true
            }
          ],
          "nickname": "Api::V1::Agencies#show",
          "method": "get"
        }
      ]
    }
  ],
  "authorizations": null
}